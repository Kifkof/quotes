@inherits LayoutComponentBase

<PageTitle>Quotes 2.0</PageTitle>


<AuthorizeView>
    <Authorized>
        <div class="u-flex">
            <h1>Quotes 2.0</h1>
            <form method="get" action="logout">
                <button type="submit" class="nav-link btn btn-link">Log out</button>
            </form>
