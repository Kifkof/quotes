<div>
    <MudPaper Class="creation-container" Elevation="3">
        <MudTextField Class="input-field" T="string" Label="Name" @bind-Value="authorCreation.Name" />
        <MudFileUpload Class="input-button" T="IBrowserFile" FilesChanged="OnChanged">
            <ButtonTemplate>
                <MudButton HtmlTag="label"
                           Variant="Variant.Filled"
                           Color="Color.Primary"
                           StartIcon="@Icons.Filled.Image"
                           for="@context">
                    Bild auswählen
                </MudButton>
            </ButtonTemplate>
        </MudFileUpload>
        @if (!string.IsNullOrEmpty(authorCreation.FileCreation.Name))
        {
            <MudText>@authorCreation.FileCreation.Name - @Humanize(authorCreation.FileCreation.FileEntry?.Size) </MudText>
        }

        <MudButton Class="create-button" Disabled="loading" Variant="Variant.Filled" OnClick="CreateAuthorAsync" Color="Color.Primary">
            @if (loading)
            {   
                <MudProgressCircular Size="Size.Small" Indeterminate="true" />
                <MudText>Erfasse...</MudText>
            }
            else
            {
                <MudText>Erfassen</MudText>
            }
        </MudButton>
    </MudPaper>
</div>